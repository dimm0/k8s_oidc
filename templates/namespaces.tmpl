{{define "body"}}
  <div class="container">
      <div class="jumbotron">
        <p class="lead">Your namespaces:</p>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {{range .NamespaceBindings}}
            <tr>
              <td>.Namespace.GetName</td>
              <td>
                {{range .NamespaceBindings}}
                  <span class="roleref">{{.RoleRef.Name}}</span>
                {{end}}
              </td>
            </tr>
            {{end}}
          </tbody>
        </table>
      </div>
  </div>
{{end}}

{{define "page_js"}}
{{end}}

{{define "page_css"}}
<style>
  span.roleref {
    background: white;
    padding: 3px;
    border-radius: 3px;
    font-size: 0.6em;
  }
</style>
{{end}}
